# EXAMPLE SECRETS FILE - DO NOT COMMIT REAL SECRETS
# Copy this file to secrets.yaml and fill in real values
# Values should be base64 encoded: echo -n "value" | base64

apiVersion: v1
kind: Secret
metadata:
  name: bug-tracker-secrets
  namespace: bug-tracker
  labels:
    app.kubernetes.io/name: bug-tracker
    app.kubernetes.io/component: secrets
type: Opaque
data:
  # Database credentials (base64 encoded)
  # Example: echo -n "postgres" | base64
  DATABASE_USER: cG9zdGdyZXM=
  DATABASE_PASSWORD: Y2hhbmdlLW1lLWluLXByb2R1Y3Rpb24=

  # Redis password
  REDIS_PASSWORD: Y2hhbmdlLW1lLWluLXByb2R1Y3Rpb24=

  # Application secret key
  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
  SECRET_KEY: Y2hhbmdlLXRoaXMtdG8tYS1zZWN1cmUtcmFuZG9tLWtleQ==

  # JWT Keys (base64 encoded PEM keys)
  # Generate with: openssl genrsa -out private.pem 2048
  #                openssl rsa -in private.pem -pubout -out public.pem
  #                cat private.pem | base64 -w 0
  JWT_PRIVATE_KEY: LS0tLS1CRUdJTiBSU0EgUFJJVkFURSBLRVktLS0tLQ==
  JWT_PUBLIC_KEY: LS0tLS1CRUdJTiBQVUJMSUMgS0VZLS0tLS0=

